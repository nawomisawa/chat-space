.Side-bar
  .Side-bar__user-name
    .Side-bar__user-name__user-box
      .Side-bar__user-name__user-box--user-name
        = current_user.name

      .Side-bar__user-name__user-box--icon-btn
        = link_to new_group_path, method: :get, class: "Side-bar__user-name__user-box--icon-btn--edit-btn" do
          = icon('far', 'edit',  class: "Side-bar__user-name__user-box--icon-btn--edit-btn--icon1")
        = link_to edit_user_path(current_user), class: "Side-bar__user-name__user-box--icon-btn--tool-btn" do
          = icon('fas', 'cog',  class: "Side-bar__user-name__user-box--icon-btn--tool-btn--icon2")

  .Side-bar__group-list
    - current_user.groups.each do |group|
      .Side-bar__group-list__group-box
        = link_to "#" do
          .Side-bar__group-list__group-box--group-name
            = group.name
